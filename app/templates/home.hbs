<NavBar @toggle={{this.toggleColor}} @isToggled={{this.isToggled}} />
<div class="banner {{if this.isToggled "purple-background"}}">
  <div class="name-role-description">
    <div class="name-role">
      <h2>Agathe Badia</h2>
      <h1 class="title">Junior Developer</h1>
    </div>
    <div class="description-card">
      <p>I am a Junior Developer with a background in tech recruiting. After three years in the HR field and talking with many passionate developers, I decided to become one!</p>
      <span class="social-media">
        <p>Follow me :)</p>
        <div class="social-links">
          <a aria-label="Visit my Linkedin profile" href="https://www.linkedin.com/in/agathe-badia/" rel="noreferrer noopener"  target="_blank"><i class="fab fa-linkedin-in"></i></a>
          <a aria-label="Visit my Github profile" href="https://github.com/Agathebadia" rel="noreferrer noopener"  target="_blank"><i class="fab fa-github"></i></a>
          <a aria-label="Follow me on Twitter" href="https://twitter.com/Agathe_BADIA" rel="noreferrer noopener"  target="_blank"><i class="fab fa-twitter"></i></a>
          <a aria-label="Follow me on Instagram" href="https://www.instagram.com/agathe.badia/" rel="noreferrer noopener"  target="_blank"><i class="fab fa-instagram"></i></a>
        </div>
      </span>
    </div>
  </div>
  <div class="circle-picture">
    {{#if this.isToggled}}
    <img src="assets/images/purple-profile.png" width="300" alt="Portrait of Agathe Badia">
    {{else}}
    <img src="assets/images/profile-picture2.png" width="300" alt="Portrait of Agathe Badia">
    {{/if}}
  </div>
</div>

<div class="projects {{if this.isToggled "purple-background"}}">

    <h1>Projects</h1>

  <div class="articles">
      <Article
        @isToggled={{this.isToggled}}
        @project={{@model.project}} />
  </div>
</div>

<div class="projects {{if this.isToggled "purple-background"}}">

  <h1>Content</h1>

  <div class="articles">
    <Content
      @isToggled={{this.isToggled}}
      @content={{@model.content}} />
  </div>
</div>

<div class="projects {{if this.isToggled "purple-background"}}">

  <h1>Media</h1>

  <div class="articles">
    <Media
      @isToggled={{this.isToggled}}
      @media={{@model.media}} />
  </div>
</div>

<Footer @toggle={{this.toggleColor}} @isToggled={{this.isToggled}}>
</Footer>
